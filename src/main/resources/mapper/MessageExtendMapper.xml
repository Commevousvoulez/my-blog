<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jicl.mapper.MessageExtendMapper">

    <resultMap extends="com.jicl.mapper.MessageMapper.ResultMapWithBLOBs" id="BaseResultMap"
               type="com.jicl.pojo.MessageExtend">
    </resultMap>

    <!--分页获取留言信箱列表-->
    <select id="page" resultMap="BaseResultMap">
        select
        <if test="distinct">
            distinct
        </if>
        <include refid="com.jicl.mapper.MessageMapper.Base_Column_List"/>
        ,
        <include refid="com.jicl.mapper.MessageMapper.Blob_Column_List"/>
        from t_message
        <if test="_parameter != null">
            <include refid="com.jicl.mapper.MessageMapper.Example_Where_Clause"/>
        </if>
        <if test="orderByClause != null">
            order by ${orderByClause}
        </if>
    </select>
</mapper>